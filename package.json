  },
  "dependencies": {
    "@billjs/event-emitter": "^1.0.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/greasemonkey": "^4.0.4",
    "@types/node": "^20.2.4",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.7",
    "concurrently": "^8.1.0",
    "css-loader": "^6.8.1",
