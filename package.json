    "typescript": "^5.0.4",
    "webpack-cli": "^5.1.1"
  },
  "browserslist": [
    "last 1 version",
    "> 1%",
    "not dead"
  ],
  "nodemonConfig": {
    "watch": [
      "src/**",
      "tools/**",
      "webpack.config.js",
      ".env"
    ],
    "ext": "ts,js,json,html,css",
    "ignore": [
      "dist/*",
      "dev/*"
    ]
  }
